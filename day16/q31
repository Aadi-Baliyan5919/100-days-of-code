#include <stdio.h>

int main() {
    int num, n;
    int binary[32];  // Array to store binary digits
    int i = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    n = num;  // Store original number for display

    if (num == 0) {
        printf("Binary of 0 is 0\n");
        return 0;
    }

    // Convert to binary
    while (num > 0) {
        binary[i] = num % 2;
        num = num / 2;
        i++;
    }

    printf("Binary of %d is ", n);
    for (i = i - 1; i >= 0; i--) {
        printf("%d", binary[i]);
    }
    printf("\n");

    return 0;
}
