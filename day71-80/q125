#include <stdio.h>

int main() {
    FILE *fp = fopen("info.txt", "a");
    if(fp == NULL) {
        printf("Error opening file.\n");
        return 1;
    }

    char text[100];
    printf("Enter text to append: ");
    getchar(); // consume leftover newline
    fgets(text, sizeof(text), stdin);

    fprintf(fp, "%s", text);
    fclose(fp);

    printf("Text appended successfully.\n");
    return 0;
}
