#include <iostream>
using namespace std;

int main() {
    int n, k;
    cout << "Enter size of array: ";
    cin >> n;
    int arr[n];
    cout << "Enter elements:\n";
    for (int i = 0; i < n; i++) cin >> arr[i];

    cout << "Enter number of positions to rotate: ";
    cin >> k;
    k = k % n; // in case k > n

    // Rotate using reversal method
    for (int i = 0; i < n / 2; i++) swap(arr[i], arr[n - 1 - i]);
    for (int i = 0; i < k / 2; i++) swap(arr[i], arr[k - 1 - i]);
    for (int i = k; i < (n + k)/2; i++) swap(arr[i], arr[n - 1 - (i - k)]);

    cout << "Array after rotation: ";
    for (int i = 0; i < n; i++) cout << arr[i] << " ";
    cout << endl;

    return 0;
}
