#include <stdio.h>

int main() {
    int num, remainder, product = 1;
    int hasOdd = 0;  // Flag to check if there is any odd digit

    printf("Enter a number: ");
    scanf("%d", &num);

    int original = num;  // Store original number for display

    // Process each digit
    while (num != 0) {
        remainder = num % 10;         // Get last digit
        if (remainder % 2 != 0) {     // Check if digit is odd
            product *= remainder;      
            hasOdd = 1;               // Mark that at least one odd digit exists
        }
        num /= 10;                     // Remove last digit
    }

    if (hasOdd)
        printf("Product of odd digits of %d is %d\n", original, product);
    else
        printf("No odd digits in %d\n", original);

    return 0;
}
