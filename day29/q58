#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n];
    
    // Reading array elements
    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int maxElement = arr[0]; // initialize max
    int minElement = arr[0]; // initialize min

    // Finding max and min
    for (int i = 1; i < n; i++) {
        if (arr[i] > maxElement)
            maxElement = arr[i];
        if (arr[i] < minElement)
            minElement = arr[i];
    }

    cout << "Maximum element = " << maxElement << endl;
    cout << "Minimum element = " << minElement << endl;

    return 0;
}
