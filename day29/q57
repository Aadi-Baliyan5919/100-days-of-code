#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n]; // declare array
    int sum = 0; // variable to store sum

    // Reading elements
    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
        sum += arr[i]; // add element to sum
    }

    cout << "The sum of the array elements is: " << sum << endl;

    return 0;
}
