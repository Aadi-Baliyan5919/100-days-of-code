#include <iostream>
using namespace std;

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin.getline(str, 100);

    int i = 0;
    while (str[i] != '\0') i++;
    int n = i;

    bool palindrome = true;
    for (int i = 0; i < n/2; i++) {
        if (str[i] != str[n-1-i]) {
            palindrome = false;
            break;
        }
    }

    if (palindrome)
        cout << "The string is a palindrome.\n";
    else
        cout << "The string is not a palindrome.\n";

    return 0;
}
