#include <iostream>
using namespace std;

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin.getline(str, 100);

    int freq[26] = {0};
    char firstRepeating = '\0';

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] >= 'a' && str[i] <= 'z') {
            freq[str[i]-'a']++;
            if (freq[str[i]-'a'] == 2) {
                firstRepeating = str[i];
                break;
            }
        }
    }

    if (firstRepeating != '\0')
        cout << "First repeating lowercase letter: " << firstRepeating << endl;
    else
        cout << "No repeating lowercase letter found.\n";

    return 0;
}
