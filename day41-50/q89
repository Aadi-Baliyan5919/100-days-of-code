#include <iostream>
using namespace std;

int main() {
    char str[100], ch;
    cout << "Enter a string: ";
    cin.getline(str, 100);
    cout << "Enter character to count: ";
    cin >> ch;

    int count = 0;
    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == ch)
            count++;
    }

    cout << "Character '" << ch << "' occurs " << count << " times.\n";
    return 0;
}
