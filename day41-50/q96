#include <iostream>
using namespace std;

int main() {
    char str[200];
    cout << "Enter a sentence: ";
    cin.getline(str,200);

    int start = 0;
    for(int i=0;;i++) {
        if(str[i]==' ' || str[i]=='\0') {
            int end = i-1;
            while(start < end) {
                char temp = str[start];
                str[start] = str[end];
                str[end] = temp;
                start++;
                end--;
            }
            start = i+1;
        }
        if(str[i]=='\0') break;
    }

    cout << "Sentence after reversing each word: " << str << endl;
    return 0;
}
