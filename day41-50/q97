#include <iostream>
using namespace std;

int main() {
    char str[100];
    cout << "Enter a name: ";
    cin.getline(str,100);

    if(str[0] != ' ') cout << (char)toupper(str[0]) << ".";
    for(int i=0; str[i] != '\0'; i++) {
        if(str[i]==' ' && str[i+1]!=' ' && str[i+1]!='\0') {
            cout << (char)toupper(str[i+1]) << ".";
        }
    }
    cout << endl;
    return 0;
}
