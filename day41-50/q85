#include <iostream>
using namespace std;

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin.getline(str, 100);

    int i = 0;
    while (str[i] != '\0') i++; // find length
    int n = i;

    for (int i = 0; i < n/2; i++) {
        char temp = str[i];
        str[i] = str[n-1-i];
        str[n-1-i] = temp;
    }

    cout << "Reversed string: " << str << endl;
    return 0;
}
