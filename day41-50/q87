#include <iostream>
using namespace std;

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin.getline(str, 100);

    int spaces=0, digits=0, specials=0;
    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ')
            spaces++;
        else if (str[i] >= '0' && str[i] <= '9')
            digits++;
        else
            specials++;
    }

    cout << "Spaces = " << spaces << ", Digits = " << digits << ", Special characters = " << specials << endl;
    return 0;
}
