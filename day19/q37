#include <stdio.h>

int main() {
    int a, b, tempA, tempB, hcf, lcm;

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    // Find HCF using Euclidean algorithm
    tempA = a;
    tempB = b;
    while (tempB != 0) {
        int remainder = tempA % tempB;
        tempA = tempB;
        tempB = remainder;
    }
    hcf = tempA;

    // Calculate LCM
    lcm = (a * b) / hcf;

    printf("LCM of %d and %d is %d\n", a, b, lcm);

    return 0;
}
