#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n];

    // Reading array elements
    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int positiveCount = 0, negativeCount = 0, zeroCount = 0;

    // Counting positive, negative, and zero elements
    for (int i = 0; i < n; i++) {
        if (arr[i] > 0)
            positiveCount++;
        else if (arr[i] < 0)
            negativeCount++;
        else
            zeroCount++;
    }

    cout << "Number of positive elements = " << positiveCount << endl;
    cout << "Number of negative elements = " << negativeCount << endl;
    cout << "Number of zeros = " << zeroCount << endl;

    return 0;
}
