#include <stdio.h>
#include <stdlib.h>

struct Student {
    char name[50];
    int roll_no;
    float marks;
};

int main() {
    struct Student *s = (struct Student*)malloc(sizeof(struct Student));
    if(s==NULL){ printf("Memory allocation failed\n"); return 1; }

    printf("Enter name, roll number, marks: ");
    scanf("%s %d %f", s->name, &s->roll_no, &s->marks);

    printf("\nStudent Details:\nName: %s, Roll No: %d, Marks: %.2f\n", s->name, s->roll_no, s->marks);
    free(s);
    return 0;
}
