#include <stdio.h>

struct Date {
    int day, month, year;
};

struct Employee {
    char name[50];
    int id;
    struct Date joinDate;
};

int main() {
    struct Employee e;
    printf("Enter name, ID: ");
    scanf("%s %d", e.name, &e.id);
    printf("Enter joining date (dd mm yyyy): ");
    scanf("%d %d %d", &e.joinDate.day, &e.joinDate.month, &e.joinDate.year);

    printf("\nEmployee Details:\nName: %s, ID: %d, Joining Date: %02d-%02d-%d\n",
        e.name, e.id, e.joinDate.day, e.joinDate.month, e.joinDate.year);
    return 0;
}
