#include <iostream>
using namespace std;

int main(){
    int n;
    cout << "Enter n: ";
    cin >> n;

    int totalSum = n*(n+1)/2;
    int leftSum=0;
    int pivot=-1;
    for(int x=1;x<=n;x++){
        leftSum += x;
        if(leftSum == totalSum - leftSum + x){
            pivot=x;
            break;
        }
    }

    cout << pivot << endl;
    return 0;
}
