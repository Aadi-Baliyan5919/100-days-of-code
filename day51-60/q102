#include <iostream>
using namespace std;

int ceilIndex(int arr[], int n, int x){
    int left=0,right=n-1,result=-1;
    while(left<=right){
        int mid=left+(right-left)/2;
        if(arr[mid]>=x){
            result=mid;
            right=mid-1;
        } else left=mid+1;
    }
    return result;
}

int main(){
    int n,x;
    cout << "Enter size of array: ";
    cin >> n;
    int arr[n];
    cout << "Enter sorted array elements:\n";
    for(int i=0;i<n;i++) cin >> arr[i];

    cout << "Enter x: ";
    cin >> x;

    int index = ceilIndex(arr,n,x);
    cout << index << endl;
    return 0;
}
