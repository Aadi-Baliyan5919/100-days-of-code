#include <stdio.h>

int main() {
    int n, i;
    double sum = 0.0;
    int numerator = 2;
    int denominator = 3;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        sum += (double)numerator / denominator;

        numerator += 2;       // Next numerator: 2, 4, 6, 8...
        denominator += 4;     // Next denominator: 3, 7, 11, 15...
    }

    printf("Sum of the series up to %d terms = %.4lf\n", n, sum);

    return 0;
}
